<head>
  <%- include('./partials/head'); %>
</head>

<main>
  <center>
    <div class="section"></div>
    <div class="section"></div>

    <div class="container">
      <div class="z-depth-1 grey lighten-5 row"
        style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
        <h4>YTA - Login</h4>
        <form class="col s12" method="post" action="/api/login">
          <div class='row'>
            <div class='col s12'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'>
              <input class='validate' type='text' name='username' id='username' />
              <label for='username'>Enter your username</label>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'>
              <input class='validate' type='password' name='password' id='password' />
              <label for='password'>Enter your password</label>
            </div>
          </div>

          <br />
          <center>
            <div class='row'>
              <button class="waves-effect waves-light btn indigo">Login <i
                  class="material-icons right">send</i></button>
          </center>
          <p class="message">Username and password can be found in your configuration.</p>
        </form>
      </div>
    </div>

  </center>

  <div class="section"></div>
  <div class="section"></div>
</main>
<center>
  <footer>
    <%- include('./partials/footer'); %>
  </footer>
</center>